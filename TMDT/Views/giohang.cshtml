@using TMDT.Models
@{
    ViewBag.Title = " Giỏ Hàng | ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>
<table align="center" border="1">
    <tr style="text-align:center;font-weight:bold">
        <td> mã sản phẩm</td>
        <td> tên sản phẩm</td>
        <td>ảnh sản phẩm</td>
        <td>số lượng</td>
        <td>đơn giá</td>
        <td>thành tiền</td>
        <td></td>
        <td></td>
        <td></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center;font-weight:bold">
            <td>@item.iidsanpham</td>
            <td>@item.stensanpham</td>
            <td><img src="~/hinhsanpham/@item.shinhanh"/></td>

            <td><input type="number" min="1" name="txtsoluong" value="@item.isoluong" style="background:#ccc"/></td>
            <td>@string.Format("{0:0,0}",item.ddongia)</td>
            <td>@string.Format("{0:0,0}", item.dthanhtien)</td>
            <td><a href="@Url.Action("details","TMDT",new { id=item.iidsanpham })">chi tiết</a></td>
            <td> @Html.ActionLink("xóa","xoagiohang")</td>
            <td><input  type="submit" value="cập nhật"/></td>
        </tr>

    }
    <tr style="font-weight:bold;text-align:center;color:red">
        <td colspan="4">
            số lượng sản phẩm: @ViewBag.tongsoluong
        </td>
        <td colspan="5">tổng tiền: @string.Format("{0:0,0}",ViewBag.tongtien) vnđ</td>
        
    </tr>
    <tr style="font-weight:bold;color:blue;text-align:right">
        <td colspan="9">@Html.ActionLink("xóa giỏ hàng","xoatatcagiohang")</td>

    </tr>

</table>

